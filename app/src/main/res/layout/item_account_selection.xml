<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".presenter.activity.MainActivity">

    <data>

        <variable
            name="account"
            type="com.eighthours.flow.domain.entity.Account" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/selection_padding">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/indent"
            android:paddingLeft="@dimen/indent"
            android:paddingRight="@dimen/indent"
            android:paddingStart="@dimen/indent"
            android:text="@{account.name}"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
</layout>
